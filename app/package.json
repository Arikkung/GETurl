{
  "name": "get-url-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for GET /url using TypeScript",
  "main": "dist/handler/GETredirect.js",
  "scripts": {
    "build": "tsc",
    "deploy": "npm run build && terraform apply -auto-approve",
    "destroy": "terraform destroy -auto-approve",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build && terraform init"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/util-dynamodb": "^3.940.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "typescript": "^5.2.2"
  }
}
